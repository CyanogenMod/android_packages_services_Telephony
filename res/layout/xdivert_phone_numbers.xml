<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Keyboard Version -->
    <!-- Modified for greater consistency with the rest of settings. -->
    <LinearLayout android:id="@+id/pinc"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dip"
            android:paddingBottom="5dip">
            <TextView android:id="@+id/sub1_name"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sub1LineNumber" />

            <EditText android:id="@+id/sub1_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:autoText="false"
                android:capitalize="none" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dip"
            android:paddingBottom="5dip">

            <TextView android:id="@+id/sub2_name"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:paddingLeft="10dip"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/sub2LineNumber" />
            <EditText android:id="@+id/sub2_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:autoText="false"
                android:capitalize="none" />

        </LinearLayout>

        <Button android:id="@+id/button"
            android:layout_marginTop="15dip"
            android:layout_marginLeft="10dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/proceed" />

    </LinearLayout>

</RelativeLayout>
